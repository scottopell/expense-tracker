<div class='filters'>
  <%= form_tag 'admin/user', method: :get do %>
    <label for='name'>User's Name: </label>
    <input type='text' name='name' value='<%= params['name'] %>'>
    <br>

    <label for='email'>User's Email: </label>
    <input type='text' name='email' value='<%= params['email'] %>'>
    <br>

    <%= submit_tag 'Go' %>
  <% end %>
</div>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User ID#</th>
      <th>Date Created</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.id %></td>
        <td><%= user.created_at %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Reset Password',
                        admin_password_reset_path(user_id: user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @users %>
