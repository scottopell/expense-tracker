<h1>All Expenses Reported</h1>


<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Category</th>
      <th>Date</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= number_to_currency expense.amount %></td>
        <td><%= expense.category %></td>
        <td><%= expense.date %></td>
        <td><%= expense.user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @expenses %>
